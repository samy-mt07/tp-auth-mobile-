<Page navigatingTo="onNavigatingTo">
    <ActionBar title="Connexion" />

    <StackLayout class="form-container" verticalAlignment="center">

        <Label text="Bienvenue" class="title" />

        <TextField id="emailField"
                   hint="Email"
                   keyboardType="email"
                   class="input" />

        <TextField id="passwordField"
                   hint="Mot de passe"
                   secure="true"
                   class="input" />

        <Label id="errorLabel"
               text=""
               class="error-text" />

        <Button id="loginButton"
                text="Se connecter"
                class="btn-primary"
                tap="onLoginTap" />

        <Button text="CrÃ©er un compte"
                class="btn-secondary"
                tap="onGoRegisterTap" />
    </StackLayout>
</Page>
